<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <View
        android:id="@+id/item1"
        style="@style/SquareView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/item2"
        style="@style/SquareView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item3"
        app:layout_constraintStart_toEndOf="@id/item1" />

    <View
        android:id="@+id/item3"
        style="@style/SquareView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/item4"
        style="@style/SquareView"
        app:layout_constraintBottom_toTopOf="@id/item1"
        app:layout_constraintEnd_toEndOf="@id/item1"
        app:layout_constraintStart_toStartOf="@id/item1"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>